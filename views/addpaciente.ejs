<%- include('layout') -%> <br /><br /><br />
<div class="container">
  <h2><% title%></h2>
  <form action="/pacientes/add" method="post">
    <div class="row mb-2">
      <label class="col-sm-2 col-form-label">Nome:</label>
      <div class="col-sm-10">
        <input
          class="form-control form-control-lg"
          type="text"
          name="Nome"
          required
        /><br /><br />
      </div>
    </div>
    <div class="row mb-2">
      <label class="col-sm-2 col-form-label">Idade:</label>
      <div class="col-sm-10">
        <input
          class="form-control form-control-lg"
          type="number"
          name="Idade"
          required
        />
      </div>
    </div>
    <br /><br />
    <div class="row mb-2">
      <label class="col-sm-2 col-form-label">CPF:</label>
      <div class="col-sm-10">
        <input
          class="form-control form-control-lg"
          type="text"
          name="CPF"
          required
        /><br /><br />
      </div>
    </div>
    <div class="row mb-2">
      <label class="col-sm-2 col-form-label">Dia Marcado:</label>
      <div class="col-sm-10">
        <input
          class="form-control form-control-lg"
          type="date"
          name="DiaMarcado"
          required
        />
      </div>
    </div>
    <div class="row mb-2">
      <label class="col-sm-2 col-form-label">Hora Marcada:</label>
      <div class="col-sm-10">
        <input
          class="form-control form-control-lg"
          type="time"
          name="HoraMarcada"
          required
        /><br /><br />
      </div>
    </div>
    <br /><br />
    <input class="btn btn-primary" type="submit" value="Submit" />
  </form>
</div>
